<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tvtracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bg"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.tvtracker.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.tvtracker.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.example.tvtracker.Home"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.example.tvtracker.Shows"
            android:label="@string/title_activity_shows" >
        </activity>
        <activity
            android:name="com.example.tvtracker.MyShows"
            android:label="@string/title_activity_my_shows" >
        </activity>
        <activity
            android:name="com.example.tvtracker.TopShows"
            android:label="@string/title_activity_top_shows" >
        </activity>
        <activity
            android:name="com.example.tvtracker.Show"
            android:label="@string/title_activity_show" >
        </activity>
    </application>

</manifest>